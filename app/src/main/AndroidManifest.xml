<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.bmt.zicreative.maidas">

<uses-permission android:name="android.permission.INTERNET" />

<application
    android:name=".PullmanApplication"
    android:allowBackup="true"
    android:icon="@drawable/logo"
    android:label="@string/app_name"
    android:roundIcon="@drawable/logo"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <meta-data
        android:name="com.google.firebase.messaging.default_notification_icon"
        android:resource="@drawable/logo" />
    <meta-data
        android:name="com.google.firebase.messaging.default_notification_color"
        android:resource="@color/gold" />
    <activity android:name=".login.LoginActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity android:name=".register.RegisterActivity">
    </activity>
    <activity android:name=".main.MainActivity">
    </activity>
    <activity android:name=".github.GithubActivity" />
    <activity
        android:name=".booking.BookingActivity"
        android:label="@string/title_activity_booking" />
    <activity
        android:name=".booking.barberman.BarberActivity"
        android:label="BarberActivity" />
    <activity
        android:name=".booking.avaliability.AvailabilityActivity"
        android:label="AvailabilityActivity" />
    <activity
        android:name=".booking.service.ServiceActivity"
        android:label="ServiceActivity" />
    <activity
        android:name=".booking.detail.DetailActivity"
        android:label="DetailActivity" />
    <activity android:name=".history.HistoryActivity" />
    <activity android:name=".inbox.InboxActivity">
        <intent-filter>
            <action android:name="INBOXACTIVITY"/>
            <category android:name="android.intent.category.DEFAULT"/>
        </intent-filter>
    </activity>
    <activity
        android:name=".profile.ProfileActivity"
        android:label="ProfileActivity" />
    <activity android:name=".service.BarberServiceActivity"></activity>
    <service android:name=".api.PullmanMessagingService">
        <intent-filter>
            <action android:name="com.google.firebase.MESSAGING_EVENT" />
        </intent-filter>
    </service>
</application>

</manifest>